{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
